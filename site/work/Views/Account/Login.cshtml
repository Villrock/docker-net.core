@model LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Sign in";
}

<h1 class="center-align">@ViewData["Title"]</h1>
<form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" accept-charset="UTF-8">
    <fieldset>
        <div class="row center-align">
            <div asp-validation-summary="ModelOnly" class="red-text"></div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Email" autocomplete="off"/>
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="red-text"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Password" autocomplete="off"/>
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="red-text"></span>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <a asp-action="ForgotPassword" title="Link to Forgot Password">Forgot Password?</a>
            </div>
        </div>
        <div class="center-align">
            <button class="btn waves-effect waves-light" type="submit" name="action">Login</button>
        </div>
    </fieldset>
</form>

@section Scripts {
    @await Html.PartialAsync( "_ValidationScriptsPartial" )
}