<div class="modal-content">
    <div class="clearfix">
        <a href="#" class="btn-floating waves-effect waves-light modal-action modal-close right"><i class="material-icons">close</i></a>
        <h4 class="modal-title">Upload File(s)</h4>
    </div>
    <form method="post" enctype="multipart/form-data" asp-controller="Document" id="uplodFileForm">
        <div class="form-group">
            <div class="input-field col">
                <div class="file-field">
                    <div class="btn">
                        <span>Files</span>
                        <input id="Files" name="Files" type="file" multiple required>
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn waves-effect waves-light" type="submit" name="action">Add File(s)</button>
            <a href="#" class="modal-action modal-close waves-effect waves-light btn-flat" onclick="document.getElementById('uplodFileForm').reset()">Cancel</a>
        </div>
    </form>
</div>