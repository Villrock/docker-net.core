@model PagingInfo

@if(Model.EndPage > 1)
{
    <ul class="pagination right">
        @if(Model.CurrentPage > 1)
        {
            <li class="waves-effect">
                <a href="@(Model.ContentUrl + (Model.ContentUrl.Contains("?") ? "&" : "?") + "page=1")">First</a>
            </li>
            <li class="waves-effect">
                <a href="@(Model.ContentUrl + (Model.ContentUrl.Contains("?") ? "&" : "?") + "page="+ ( Model.CurrentPage - 1))"><i class="material-icons">chevron_left</i></a>
            </li>
        }

        @for(var page = Model.StartPage; page <= Model.EndPage; page++)
        {
            <li class="@(page == Model.CurrentPage ? "active" : "waves-effect waves-light")">
                <a href="@(Model.ContentUrl + (Model.ContentUrl.Contains("?") ? "&" : "?") + "page=" + page )">@(page)</a>
            </li>
        }

        @if(Model.CurrentPage < Model.TotalPages)
        {
            <li>
                <a class="waves-effect" href="@(Model.ContentUrl + (Model.ContentUrl.Contains("?") ? "&" : "?") + "page="+(Model.CurrentPage + 1))"><i class="material-icons">chevron_right</i></a>
            </li>
            <li>
                <a class="waves-effect" href="@(Model.ContentUrl + (Model.ContentUrl.Contains("?") ? "&" : "?") + "page="+Model.TotalPages)">Last</a>
            </li>
        }
    </ul>
}