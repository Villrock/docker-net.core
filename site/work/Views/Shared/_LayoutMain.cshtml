@{
    Layout = "_Layout";
}
<div class="container">
    <!-- header start -->
    @await Html.PartialAsync("_Header")
    <!-- header end -->
    <!-- content start -->
    <main role="main" id="main">
        @RenderBody()
    </main>
    <!-- content end -->
</div>

@await Html.PartialAsync("_NotificationSideBar")

@section BeforeScripts {

    <environment include="Development">
        <script src="~/lib/vue/vue.js"></script>
        <script src="~/lib/vue/vue-validate.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/vue"
                asp-fallback-src="~/lib/vue/vue.min.j"
                asp-fallback-test="Vue">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/vee-validate"
                asp-fallback-src="~/lib/vue/vue-validate.js"
                asp-fallback-test="VeeValidate">
        </script>
    </environment>
}

@section Scripts {

    <environment include="Development">
        <script src="~/js/vue.requests.js"></script>
        <script src="~/js/vue.manage.js"></script>
        <script src="~/js/vue.alerts.js"></script>
        <script src="~/js/vue.documents.js"></script>
        <script src="~/lib/jquery-throttle/jquery.ba-throttle-debounce.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/site.vue.min.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-throttle-debounce/1.1/jquery.ba-throttle-debounce.min.js"
                asp-fallback-src="~/lib/jquery-throttle/jquery.ba-throttle-debounce.min.js">
        </script>

    </environment>

    @RenderSection("Scripts", required: false)
}